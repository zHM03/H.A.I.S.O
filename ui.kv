<HoverButton@Button>:
    background_normal: ""
    background_color: 0.2, 0.3, 0.7, 1
    color: 1, 1, 1, 1
    font_size: 18
    size_hint_y: None
    height: "50dp"
    size_hint_x: 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

<AsistanEkrani>:
    orientation: "horizontal"
    padding: 20
    spacing: 30

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.35
        spacing: 15

        HoverButton:
            text: "Breathing Exercise"
            on_release: root.yazili_girdi_isle("Breathing Exercise")

        HoverButton:
            text: "Time"
            on_release: root.yazili_girdi_isle("What time is it?")

        HoverButton:
            text: "Clean"
            on_release: root.yazili_girdi_isle("Clean temproray files")


        HoverButton:
            text: "Weather"
            on_release: root.weather_popup_ac()
            
        HoverButton:
            text: "Set Reminder"
            on_release: root.hatirlatici_popup_ac()
            
        HoverButton:
            text: "Calculator"
            on_release: root.hesap_makinesi_popup_ac()

        HoverButton:
            text: "Scheduled Shutdown"
            on_release: root.kapatma_popup_ac()
            
        Widget:

    FloatLayout:
        size_hint_x: 0.65

        Label:
            id: baslik
            text: "H.A.I.S.O"
            font_size: 36
            bold: True
            color: 0.2, 0.3, 0.7, 1
            size_hint: None, None
            size: self.texture_size
            pos: 480, 530

        Label:
            id: kullanici_label
            text: root.kullanici_metni
            font_size: 24
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.4}
            y: 350

        Label:
            id: cevap_label
            text: root.cevap
            font_size: 24
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.4}
            y: kullanici_label.y - self.height - 50
